#include <stdio.h>

void main(){
    
    int myArray[] = {0, 0, 1, 0, 2, 0, 1, 0, 2, 2, 0};
    
    int length = sizeof(myArray)/sizeof(myArray[0]);
    int count0 = 0; int count1 = 0; int count2 = 0;
    
    for (int i=0; i<length; i++)
    {
        if (myArray[i] == 0)
        {
            count0++;
        }
        else if (myArray[i] == 1)
        {
            count1++;
        }
        else
        {
            count2++;
        }
    }
    for (int i=0; i<length; i++)
    {
        if (i <= count0)
        {
            myArray[i] = 0;
        }
        else if (i> count0 & i<=(count0+count1))
        {
            myArray[i] = 1;
        }
        else 
        {
            myArray[i] = 2;
        }
            
    }
    
    printf("the sorted array is as follows:\n{ ");
    
    for (int i=0; i<length; i++)
    {
        printf("%d ", myArray[i]);
    }
    printf("}");
    
    
}
