#include <stdio.h>

// code to calculate nCr 
int factorial(int n){
    int prod = 1;
    for (int i=n; i>0; i--)
    {
        prod*=i;
    }
    return prod;
}

void main()
{
    int n; int r;
    printf("Enter the value of n and r: ");
    scanf("%d %d", &n, &r);
    
    if (r > n)
    {
        printf("Invalid value of r\n");
        printf("r should be less than or equal to n");
    }
    else if (n == r || r == 0)
    {
        printf("The answer is 1");
    }
    else
    {
        int nCr = factorial(n)/(factorial(r)*factorial(n-r));
        printf("%d", nCr);
    }
    
    
}
