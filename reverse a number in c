#include <stdio.h>

void main() {
    // reverse a number
    
    int mynum;
    
    printf("type a number \n");
    scanf("%d", &mynum);
  
    int reversed = 0, remainder;
    while (mynum != 0) 
    {
      remainder = mynum % 10;             
      reversed = reversed * 10 + remainder; 
      mynum /= 10;                        
    }

    printf("Reversed number = %d\n", reversed);
    
}
