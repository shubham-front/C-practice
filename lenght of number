// Online C compiler to run C program online
#include <stdio.h>
#include <math.h>
#include <stdbool.h>

void main() {
    // reverse a number
    
    int mynum;
    
    printf("type a number \n");
    scanf("%d", &mynum);
    
    int numdig(int calnum){
        int count = 0;
        while (true)
        {
           if (calnum/10 != 0)
           {
               calnum = calnum/10;
               count++;
           }
           else
           {
               break;
           }
        }
        printf("the length of code is %d", count+1);
        return 0;
        
    }

    numdig(mynum);
}
