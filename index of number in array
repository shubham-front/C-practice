#include <stdio.h>

// to find the index of a number in an array
void main() {
    int myArray[] = {61, 20, 35, 18, 12, 80, 75};
    
    int mynum;
    
    printf("type a number to print the table:  \n");
    scanf("%d", &mynum);
    
    int length = sizeof(myArray)/sizeof(myArray[0]);
    
    int flag = 0;
    for (int i=0; i< length; i++ )
    {   
        
        if (mynum == myArray[i])
        {
            printf("the number is present at the index %d", i);
            flag = 1;
        }
        
    }
    if (flag == 0)
    {
        printf("the number is not present in the array");
    }
    
}
